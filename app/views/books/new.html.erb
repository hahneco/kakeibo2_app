<h1>家計簿新規登録</h1>

<%= form_with model: @book, local: true do |f| %>
  <div class="form-group">
    <label for="">年度</label>
    <%= f.number_field :year, class: "form-controll" %>
  </div>

  <div class="form-group">
    <label for="">月</label>
    <%= f.number_field :month, class: "form-controll" %>
  </div>

  <div class="form-group">
    <label for="">区分</label>
    <%= f.select :inout, [["収入",1],["支出",2]], {}, class: "form-controll" %>
  </div>

  <div class="form-group">
    <label for="">科目</label>
    <%= f.text_field :category, class: "form-controll" %>
  </div>

  <div class="form-group">
    <label for="">金額</label>
    <%= f.number_field :amount, class: "form-controll" %>
  </div>

  <%= link_to  "戻る", books_path, class: "btn btn-secondary" %>
  <%= f.submit "登録", class: "btn btn-primary" %>
<% end %>
